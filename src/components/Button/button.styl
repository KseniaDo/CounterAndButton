.button {
    display: inline-block;
    position: relative;
    cursor: pointer;
    border: 0;
    font-weight: 500;
    line-height: 1;
    font-family: "Roboto", serif;
    font-style: normal;

    transition-property: opacity, background-color, scale;
    transition-duration: 500ms;
    transition-timing-function: cubic-bezier(0, -0.3, 0.5, 1.3);

    &_primary{
        background-color: #FF7700;
        color: #FFFFFF;
    }

    &_secondary {
        background-color: #8366561F;
        color: #2E2F33;
    }

    &__overlay {
        position: absolute;
        top:0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        background-color: #FFFFFF;

        transition-property: opacity, background-color;
        transition-duration: 500ms;
        transition-timing-function: cubic-bezier(0, -0.3, 0.5, 1.3);
    }

    &:hover .content-group {
        scale: 1.05;
    }

    &:hover .button__overlay {
        opacity: 0.12;
    }

    &:active {
        scale: 0.95;
    }

    &:active .button__overlay {
        opacity: 0.2;
    }
    
  }

  .content-group {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;

    transition-property: scale;
    transition-duration: 500ms;
    transition-timing-function: cubic-bezier(0, -0.3, 0.5, 1.3);
  }

  .button_28 {
    height: 28px;
    border-radius: 9.3px;
    padding: 6px 10px;
    font-size: 13px;
  }
  .button_36 {
    height: 36px;
    border-radius: 12px;
    padding: 8px 12px;
    font-size: 15px;
  }
  .button_56 {
    height: 56px;
    border-radius: 16px;
    padding: 16px 16px;
    font-size: 17px;
  }

  .button_focused:focus {
    outline: 3px solid #0099FF;
  }

  .button_unfocused:focus {
    outline: none;
  }

  .button:disabled {
    opacity: 0.36;
  }
  