.counter {
    display: inline-flex;
    flex-direction: column;
    justify-content: center;
    vertical-align: middle;
    text-align: center;
    border: 0;
    border-radius: 50%;
    font-weight: 500;
    font-family: "Roboto", serif;
    font-style: normal;
  }

  .counter_stroke{
    box-shadow:inset 0px 0px 0px 2px #FFFFFF;
    &_thin{
      box-shadow:inset 0px 0px 0px 1px #FFFFFF;
    }
  }

  .counter_primary {
    background-color: #2FB675;
    color: white;

    &_custom{
      background-color: #FFFFFF1F;
    }
  }
  .counter_secondary {
    background-color: #8366561F;
    color: #333;

    &_custom{
      background-color: #8366561F;
    }
  }
  .counter_24 {
    min-width: 12px;
    min-height: 24px;
    padding: 0 6px;
    line-height: 20px;
    -webkit-text-stroke-width: 3;
  }

  .counter_20 {
    min-width: 12px;
    min-height: 20px;
    padding: 0 4px;
    line-height: 16px;
    -webkit-text-stroke-width: 2;
  }

  .counter_16 {
    min-width: 8px;
    min-height: 16px;
    padding: 0 4px;
    line-height: 12px;
    -webkit-text-stroke-width: 2;
  }

  .counter_12 {
    min-width: 12px;
    min-height: 12px;
    -webkit-text-stroke-width: 2;
  }

  .counter_8 {
    min-width: 8px;
    min-height: 8px;
    -webkit-text-stroke-width: 1;
  }

  .live-indicator {
    width: 8px;
    height: 8px;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .live-indicator .dot, .live-indicator .pulse {
    position: absolute;
    height: 8px;
    width: 8px;
    border-radius: 999px;
    background-color: #2FB675;
  }
  
  .live-indicator .pulse {
    animation-name: red-dot-scale-fade;
    animation-iteration-count: infinite; 
    animation-duration: 2s;
  }
  
  .live-indicator .pulse.two {
    animation-delay: 0.25s;
  }
  
  
  @keyframes red-dot-scale-fade {
    0% {
      opacity: 0.5;
      transform: scale(1);
    }
    50% {
      opacity: 0;
      transform: scale(3);
    }
    
    100% {
      opacity: 0;
      transform: scale(3);
    }
  }